<Application x:Class="Investor.UI.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Investor.UI.Windows"
             xmlns:core="clr-namespace:Investor.UI.Core;assembly=Investor.UI.Core">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important -->
                <ResourceDictionary Source="Dictionaries/Basic/Colors.xaml" />
                <ResourceDictionary Source="Dictionaries/Basic/Fonts.xaml" />
                <ResourceDictionary Source="Dictionaries/Basic/BasicStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
    
</Application>
